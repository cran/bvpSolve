  title = "Solving boundary value problems in the open source software R: Package bvpSolve",
  author = c(person("Francesca Mazzia"), 
             person("Jeff R. Cash"),
             person("Karline Soetaert")),
  journal =	"Opuscula mathematica",
  volume =	"34",
  number =	"2",
  pages =	"387--403",
  year = 	"2014",
  textVersion =  paste("Francesca Mazzia, Jeff R. Cash, Karline Soetaert (2014).
  Solving boundary value problems in the open source software R: Package bvpSolve.
  Opuscula mathematica, 34(2), 387--403. 
  https://www.opuscula.agh.edu.pl/vol34/2/art/opuscula_math_3424.pdf")
)
